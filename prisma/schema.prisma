generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Role {
  id          Int      @id @default(autoincrement())
  code        String   @unique        // MANAGER, TEAM_LEADER, SALES
  name        String
  description String?
  isActive    Boolean  @default(true)

  users       User[]

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("roles")
}

model User {
  id         Int      @id @default(autoincrement())
  name       String
  email      String   @unique
  password   String   
  phone      String?
  photo      String?
  address    String?
  isActive   Boolean  @default(true)
  lastLogin  DateTime?

  roleId     Int?
  role       Role?    @relation(fields: [roleId], references: [id])

  // hirarki user
  // Manager -> Team Leader
  managerId    Int?    // diisi kalau user ini TEAM_LEADER
  manager      User?   @relation("ManagerTeamLeaders", fields: [managerId], references: [id])
  teamLeaders  User[]  @relation("ManagerTeamLeaders")  // daftar TL yang dibawahi manager ini

  // Team Leader -> Sales
  teamLeaderId Int?    // diisi kalau user ini SALES
  teamLeader   User?   @relation("TeamLeaderSales", fields: [teamLeaderId], references: [id])
  sales        User[]  @relation("TeamLeaderSales")      // daftar sales yang dibawahi TL ini

  leads       Lead[]   @relation("UserLeads")
  leadFollowUps LeadFollowUp[]
  whatsappSession WhatsAppSession?
  leadMessages    LeadMessage[] @relation("UserLeadMessages")

  stageHistoriesChanged  LeadStageHistory[]   @relation("LeadStageHistoryChangedBy")
  stageHistoriesAsSales  LeadStageHistory[]   @relation("LeadStageHistorySales")
  statusHistoriesChanged LeadStatusHistory[]  @relation("LeadStatusHistoryChangedBy")
  statusHistoriesAsSales LeadStatusHistory[]  @relation("LeadStatusHistorySales")

  leadActivities LeadActivity[] @relation("LeadActivityCreatedBy")

  trackedLinks       LeadTrackedLink[]      @relation("LeadTrackedLinks_Sales")
  trackedLinkClicks  LeadTrackedLinkClick[] @relation("LeadTrackedLinkClicks_Sales")

  importedLeads Lead[] @relation("LeadImportedBy")

  requestedAIInsights LeadAIInsight[] @relation("LeadAIInsightRequestedBy")

  whatsappTemplates WhatsAppMessageTemplate[]

  // siapa yang mengubah sub status
  subStatusHistoriesChanged LeadSubStatusHistory[] @relation("SubStatusHistoryChangedBy")

  // owner lead (sales)
  subStatusHistoriesAsSales LeadSubStatusHistory[] @relation("SubStatusHistorySales")

  // daftar kontak WA yang dikecualikan (khusus sales)
  excludedContacts SalesExcludedContact[]

  sentLeadMessages LeadMessage[] @relation("LeadMessageSentBy")

  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  deletedAt  DateTime?

  @@map("users")
}

model Product {
  id          Int      @id @default(autoincrement())
  category    String   // contoh: "Jasa", "Layanan", "Produk"
  name        String
  description String?
  photo       String?  // URL gambar produk
  isAvailable Boolean  @default(true)

  // multi link: array of { label, url }
  demoLinks        Json?   // [{ "label": "Demo 3 menit", "url": "https://..." }, ...]
  testimonialLinks Json?   // [{ label, url }, ...]
  educationLinks   Json?   // [{ label, url }, ...]
  
  leads       Lead[]
  nurturingPlans   NurturingPlan[] @relation("ProductNurturingPlans")

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  deletedAt   DateTime?

  @@map("products")
}

enum LeadFieldType {
  TEXT          // input text biasa
  TEXTAREA      // textarea
  NUMBER        // angka
  DATE          // tanggal
  SINGLE_SELECT // dropdown (pilih 1)
  MULTI_SELECT  // checkbox (pilih banyak)
}

model LeadStage {
  id        Int     @id @default(autoincrement())
  name      String  // contoh: "Kontak Awal", "Kunjungan / Zoom"
  code      String  @unique
  order     Int     @default(0) // buat urutan di UI
  isActive  Boolean @default(true)

  leads     Lead[]
  stageHistories  LeadStageHistory[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model LeadStatus {
  id        Int     @id @default(autoincrement())
  name      String  // contoh: "Cold", "Warm", "Hot"
  code      String  @unique // "COLD", "WARM", "HOT"
  order     Int     @default(0)
  isActive  Boolean @default(true)

  leads     Lead[]
  statusHistories LeadStatusHistory[]
  subStatuses LeadSubStatus[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum StageChangeMode {
  NORMAL
  SKIPPED
}

model LeadStageHistory {
  id          Int       @id @default(autoincrement())

  leadId      Int
  lead        Lead      @relation(fields: [leadId], references: [id])

  stageId     Int
  stage       LeadStage @relation(fields: [stageId], references: [id])

  // siapa yang klik ubah tahap (biasanya sales / TL / manager)
  changedById Int?
  changedBy   User?     @relation("LeadStageHistoryChangedBy", fields: [changedById], references: [id])

  // owner lead (sales pemilik lead) â†’ buat laporan per sales
  salesId     Int?
  sales       User?     @relation("LeadStageHistorySales", fields: [salesId], references: [id])

  note        String?

  doneAt      DateTime?

  mode        StageChangeMode @default(NORMAL)
  
  createdAt   DateTime  @default(now())

  @@index([leadId])
  @@index([stageId])
  @@index([salesId])
}

model LeadStatusHistory {
  id          Int        @id @default(autoincrement())

  leadId      Int
  lead        Lead       @relation(fields: [leadId], references: [id])

  statusId    Int
  status      LeadStatus @relation(fields: [statusId], references: [id])

  changedById Int?
  changedBy   User?      @relation("LeadStatusHistoryChangedBy", fields: [changedById], references: [id])

  salesId     Int?
  sales       User?      @relation("LeadStatusHistorySales", fields: [salesId], references: [id])

  note        String?
  createdAt   DateTime   @default(now())

  @@index([leadId])
  @@index([statusId])
  @@index([salesId])
}

enum NurturingStatus {
  ACTIVE    // mesin nurturing boleh jalan
  PAUSED    // dipause karena sales follow up / lead lagi aktif di pipeline
  STOPPED   // dimatikan permanen (closing / lost / diputuskan)
}

model Lead {
  id        Int      @id @default(autoincrement())

  salesId   Int?
  sales     User?    @relation("UserLeads", fields: [salesId], references: [id])

  productId Int?
  product   Product? @relation(fields: [productId], references: [id])

  // FIELD PATEN
  name      String
  address   String?
  city      String?
  phone     String?
  photoUrl  String?

  // harga penawaran / nego / closing
  priceOffering    Decimal? @db.Decimal(12, 2)
  priceNegotiation Decimal? @db.Decimal(12, 2)
  priceClosing     Decimal? @db.Decimal(12, 2)

  // tahap "kontak awal" dst
  stageId  Int?
  stage    LeadStage? @relation(fields: [stageId], references: [id])

  // status (cold, warm, hot)
  statusId Int?
  status   LeadStatus? @relation(fields: [statusId], references: [id])

  // sub status
  subStatusId Int?
  subStatus LeadSubStatus? @relation("LeadSubStatusLeads", fields: [subStatusId], references: [id])
  subStatusHistories LeadSubStatusHistory[]

  // SUMBER LEAD
  sourceId Int?
  source   LeadSource? @relation(fields: [sourceId], references: [id])

  // FLAG IMPORT EXCEL
  importedFromExcel Boolean @default(false)
  importedAt        DateTime?

  // siapa yang import (sales yg upload)
  importedById Int?
  importedBy   User? @relation("LeadImportedBy", fields: [importedById], references: [id])

  // FIELD DINAMIS
  customValues LeadCustomFieldValue[]

  // histori tindak lanjut (audit log)
  followUps   LeadFollowUp[]

  // relasi ke log chat wa
  messages    LeadMessage[]

  stageHistories  LeadStageHistory[]
  statusHistories LeadStatusHistory[]

  activities  LeadActivity[]

  nurturingState LeadNurturingState?

  trackedLinks       LeadTrackedLink[]      @relation("LeadTrackedLinks_Lead")
  trackedLinkClicks  LeadTrackedLinkClick[] @relation("LeadTrackedLinkClicks_Lead")

  aiInsights LeadAIInsight[] @relation("LeadAIInsightLead")

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model LeadCustomFieldDef {
  id        Int           @id @default(autoincrement())
  key       String        @unique // contoh: "source", "interest_level"
  label     String        // label di form: "Sumber Lead", "Minat Produk"
  type      LeadFieldType

  placeholder String?     // optional, buat UI
  helpText    String?     // optional, teks kecil di bawah field

  isRequired Boolean      @default(false)
  isActive   Boolean      @default(true)
  sortOrder  Int          @default(0) // urutan di form

  // untuk SINGLE_SELECT / MULTI_SELECT
  options   LeadCustomFieldOption[]

  // relasi ke value yang diisi per-lead
  values    LeadCustomFieldValue[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model LeadCustomFieldOption {
  id       Int                @id @default(autoincrement())
  fieldId  Int
  field    LeadCustomFieldDef @relation(fields: [fieldId], references: [id])

  label    String // contoh: "Instagram", "WhatsApp", "Walk-in"
  value    String // contoh: "instagram", "whatsapp", "walkin"
  sortOrder Int   @default(0)
}

model LeadCustomFieldValue {
  id      Int                @id @default(autoincrement())

  leadId  Int
  lead    Lead               @relation(fields: [leadId], references: [id])

  fieldId Int
  field   LeadCustomFieldDef @relation(fields: [fieldId], references: [id])

  // simpan sebagai string / JSON
  // TEXT/NUMBER/DATE/SINGLE_SELECT => langsung string
  // MULTI_SELECT => bisa simpan JSON (["instagram","tiktok"])
  value   String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([leadId, fieldId]) // 1 lead cuma boleh 1 value per field
}

model LeadSource {
  id          Int      @id @default(autoincrement())
  code        String   @unique // contoh: "IG_ADS", "WHATSAPP"
  name        String   // contoh: "Instagram Ads", "WhatsApp"
  description String?
  order       Int      @default(0)
  isActive    Boolean  @default(true)

  leads       Lead[]
  nurturingPlans NurturingPlan[] @relation("LeadSourceNurturingPlans")

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  deletedAt   DateTime?

  @@map("lead_sources")
}

model LeadFollowUpType {
  id          Int      @id @default(autoincrement())
  code        String   @unique // contoh: "FU1", "FU2", "KIRIM_PROPOSAL"
  name        String   // contoh: "Follow Up 1", "Follow Up 2", "Kirim Proposal"
  description String?
  order       Int      @default(0)
  isActive    Boolean  @default(true)

  // PENGATURAN NURTURING OTOMATIS
  isNurturingStep   Boolean  @default(false)
  nurturingOrder    Int?                 // urutan nurturing: 1 = FO1, 2 = FO2, 3 = FO3, 4 = FO4, 5 = nurturing ringan
  autoDelayHours    Int?                 // jeda jam dari step sebelumnya sebelum step ini dikirim
  autoOnLeadCreate  Boolean @default(false) // true hanya utk step yg mau dikirim saat lead baru dibuat (FO1)

  // Template pesan WA untuk nurturing
  waTemplateTitle   String?
  waTemplateBody    String?   @db.Text    // isi pesan nurturing (pakai placeholder)
  waTemplateMedia   String?              // url brosur/gambar kalau ada

  // optional: filter status target nurturing (misal nurturing ringan hanya utk COLD)
  targetStatusCode  String?              // contoh: "COLD", "WARM", "HOT" (kalau mau dipakai)

  // relasi ke histori tindak lanjut
  followUps   LeadFollowUp[]

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  deletedAt   DateTime?

  @@map("lead_followup_types")
}

enum FollowUpChannel {
  WHATSAPP
  CALL
  ZOOM
  VISIT
}

model LeadFollowUp {
  id          Int               @id @default(autoincrement())

  leadId      Int
  lead        Lead              @relation(fields: [leadId], references: [id])

  // siapa yang melakukan follow up (biasanya SALES)
  salesId     Int?
  sales       User?             @relation(fields: [salesId], references: [id])

  typeId      Int?
  type        LeadFollowUpType? @relation(fields: [typeId], references: [id])

  note        String?           // catatan follow up
  
  // null = masih JADWAL / belum dikerjakan
  // terisi = sudah DIKERJAKAN (ditandai selesai)
  doneAt       DateTime?

  // jadwal follow up berikutnya (tanggal + jam yang kamu input dari modal)
  nextActionAt DateTime?

  channel       FollowUpChannel   @default(WHATSAPP)

  isAutoNurturing Boolean @default(false) // true kalau dikirim oleh mesin nurturing

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([leadId, doneAt])
  @@index([leadId, nextActionAt])

  @@map("lead_followups")
}

model LeadTargetSetting {
  id        Int      @id @default(1)

  // Target global yang berlaku untuk semua sales
  // - leadTargetPerDay: target jumlah lead baru per hari
  // - closingTargetAmount: target nominal closing per bulan
  leadTargetPerDay    Int     @default(0)
  closingTargetAmount Decimal @db.Decimal(14, 2) @default(0)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("lead_target_settings")
}

// Channel pesan (WA, catatan manual, dll)
enum LeadMessageChannel {
  WHATSAPP
  NOTE
}

// Arah pesan (masuk/keluar)
enum MessageDirection {
  INBOUND   // dari lead ke sales
  OUTBOUND  // dari sales ke lead
}

// Status koneksi WhatsApp per user
enum WhatsappStatus {
  PENDING_QR    // client sudah dibuat, menunggu scan QR
  CONNECTED     // sudah terhubung
  DISCONNECTED  // pernah terhubung, sekarang putus
  ERROR         // error client
}

model WhatsAppSession {
  id            Int             @id @default(autoincrement())
  userId        Int             @unique
  user          User            @relation(fields: [userId], references: [id])

  // nomor WA yang dipakai client ini, contoh "628123456789"
  phoneNumber   String?

  // id chat WA utama (opsional, bisa diisi saat ready)
  waUserJid     String?         // contoh: "628123456789@c.us"

  status        WhatsappStatus  @default(PENDING_QR)

  lastConnectedAt DateTime?
  lastSeenAt      DateTime?

  createdAt     DateTime        @default(now())
  updatedAt     DateTime        @updatedAt

  @@map("whatsapp_sessions")
}

enum LeadMessageType {
  TEXT
  MEDIA
}

enum WaMessageStatus {
  PENDING     // baru dibuat di DB
  SENT        // ACK 1
  DELIVERED   // ACK 2
  READ        // ACK 3
  FAILED
}

model LeadMessage {
  id          Int                @id @default(autoincrement())

  leadId      Int
  lead        Lead               @relation(fields: [leadId], references: [id])

  // siapa sales yang terkait (biasanya owner lead / pemilik WA client)
  salesId     Int?
  sales       User?              @relation("UserLeadMessages", fields: [salesId], references: [id])

  // AUDIT: siapa yang klik kirim
  sentById Int?
  sentBy   User? @relation("LeadMessageSentBy", fields: [sentById], references: [id])

  // snapshot role saat kirim
  sentByRole  String?

  channel     LeadMessageChannel
  direction   MessageDirection

  // meta khusus WhatsApp
  waMessageId String?            @unique
  waChatId    String?            // contoh "628123456789@c.us"
  fromNumber  String?            // "628123456789"
  toNumber    String?            // "628987654321"

  content     String  @db.LongText  // isi pesan

  type        LeadMessageType    @default(TEXT)
  mediaUrl    String?
  mediaName   String?
  mediaMime   String?

  waStatus    WaMessageStatus @default(PENDING)
  sentAt      DateTime?       // diisi saat ACK 1
  deliveredAt DateTime?       // ACK 2
  readAt      DateTime?       // ACK 3

  trackedLinks LeadTrackedLink[] @relation("LeadTrackedLinks_LeadMessage")

  createdAt   DateTime           @default(now())
  updatedAt   DateTime           @updatedAt

  @@index([leadId])
  @@index([salesId])
  @@index([channel, direction])
  @@index([leadId, direction, createdAt])
  @@map("lead_messages")
}

model LeadActivity {
  id          Int       @id @default(autoincrement())
  leadId      Int
  lead        Lead      @relation(fields: [leadId], references: [id])

  title       String
  description String?   @db.Text

  /// Waktu kejadian aktivitas (tanggal + jam yg user input)
  happenedAt  DateTime

  /// URL / path foto opsional
  photoUrl    String?

  createdById Int?
  createdBy   User?     @relation("LeadActivityCreatedBy", fields: [createdById], references: [id])

  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

model GeneralSetting {
  id                      Int     @id @default(1)

  companyName             String  @default("Perusahaan Kami")
  autoNurturingEnabled    Boolean @default(true)

  /// berapa jam setelah sales diam nurturing boleh jalan lagi
  maxIdleHoursBeforeResume Int    @default(48)

  /// Pesan sambutan otomatis untuk lead baru dari WhatsApp
  welcomeMessageEnabled    Boolean @default(true)
  welcomeMessageTemplate   String? @db.Text

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("general_settings")
}

enum NurturingTemplateSlot {
  A
  B
}

model NurturingCategory {
  id        Int      @id @default(autoincrement())
  code      String   @unique
  name      String
  order     Int      @default(0)
  isActive  Boolean  @default(true)

  topics    NurturingTopic[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("nurturing_categories")
}

model NurturingTopic {
  id          Int      @id @default(autoincrement())

  categoryId  Int
  category    NurturingCategory @relation(fields: [categoryId], references: [id])

  title       String
  description String?  @db.Text

  order       Int      @default(0)
  isActive    Boolean  @default(true)

  // optional targeting
  targetStatusCode String?
  targetStageCode  String?

  templates   NurturingTemplate[]

  // dipakai oleh plan steps
  planSteps   NurturingPlanStep[]

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([categoryId])
  @@map("nurturing_topics")
}

model NurturingTemplate {
  id        Int      @id @default(autoincrement())

  topicId   Int
  topic     NurturingTopic @relation(fields: [topicId], references: [id])

  slot      NurturingTemplateSlot
  isActive  Boolean  @default(true)

  waTemplateTitle String?
  waTemplateBody  String? @db.Text   // nullable sesuai request kamu
  waTemplateMedia String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // max 2 template per judul (A & B)
  @@unique([topicId, slot])
  @@index([topicId])
  @@map("nurturing_templates")
}

model NurturingPlan {
  id          Int      @id @default(autoincrement())
  code        String   @unique
  name        String
  description String?  @db.Text

  isActive    Boolean  @default(true)

  // scope opsional (sesuai product lead)
  productId   Int?
  product     Product? @relation("ProductNurturingPlans", fields: [productId], references: [id])

  // filter opsional
  targetStatusCode String?

  sourceId    Int?
  source      LeadSource? @relation("LeadSourceNurturingPlans", fields: [sourceId], references: [id])

  steps       NurturingPlanStep[]
  leadStates  LeadNurturingState[]

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([productId])
  @@index([sourceId])
  @@map("nurturing_plans")
}

model NurturingPlanStep {
  id        Int      @id @default(autoincrement())

  planId    Int
  plan      NurturingPlan @relation(fields: [planId], references: [id])

  topicId   Int
  topic     NurturingTopic @relation(fields: [topicId], references: [id])

  order     Int      @default(0)

  // jeda dari step sebelumnya
  delayHours Int     @default(24)

  // pakai template slot mana (A/B)
  slot      NurturingTemplateSlot @default(A)

  isActive  Boolean  @default(true)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([planId, order])
  @@index([planId])
  @@index([topicId])
  @@map("nurturing_plan_steps")
}

enum NurturingPauseReason {
  MANUAL_TOGGLE
  SALES_FOLLOWUP
  INBOUND_RECENT
  SYSTEM_RULE
}

model LeadNurturingState {
  id        Int      @id @default(autoincrement())

  leadId    Int      @unique
  lead      Lead     @relation(fields: [leadId], references: [id])

  planId    Int?
  plan      NurturingPlan? @relation(fields: [planId], references: [id])

  status     NurturingStatus @default(ACTIVE)

  // 0 = belum mulai, 1..n = step berjalan
  currentStep Int     @default(0)

  startedAt  DateTime?
  lastSentAt DateTime?
  nextSendAt DateTime?
  pausedAt   DateTime?

  // tambahan untuk per-lead toggle & alasan pause
  pauseReason  NurturingPauseReason?
  manualPaused Boolean @default(false)

  // idempotency / anti dobel, contoh: "LEAD:12:STEP:5"
  lastMessageKey String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([status])
  @@index([nextSendAt])
  @@index([planId])
  @@unique([lastMessageKey])
  @@map("lead_nurturing_states")
}

enum TrackedLinkKind {
  DEMO
  TESTIMONIAL
  EDUCATION
  FILE
  OTHER
}

model LeadTrackedLink {
  id            Int      @id @default(autoincrement())

  leadId        Int
  lead          Lead     @relation("LeadTrackedLinks_Lead", fields: [leadId], references: [id])

  salesId       Int
  sales         User     @relation("LeadTrackedLinks_Sales", fields: [salesId], references: [id])

  leadMessageId Int?
  leadMessage   LeadMessage? @relation("LeadTrackedLinks_LeadMessage", fields: [leadMessageId], references: [id])

  kind          TrackedLinkKind @default(OTHER)

  slug          String
  code          String   @unique

  label         String?
  targetUrl     String   @db.Text

  productId     Int?
  planId        Int?
  stepOrder     Int?

  createdAt     DateTime @default(now())

  clicks        LeadTrackedLinkClick[]

  @@index([leadId])
  @@index([salesId])
  @@index([leadMessageId])
  @@index([slug])
  @@map("lead_tracked_links")
}

model LeadTrackedLinkClick {
  id        Int      @id @default(autoincrement())

  linkId    Int
  link      LeadTrackedLink @relation(fields: [linkId], references: [id])

  leadId    Int
  lead      Lead     @relation("LeadTrackedLinkClicks_Lead", fields: [leadId], references: [id])

  salesId   Int
  sales     User     @relation("LeadTrackedLinkClicks_Sales", fields: [salesId], references: [id])

  clickedAt DateTime @default(now())

  ip        String?
  userAgent String?
  isPreview Boolean @default(false)

  @@unique([linkId, leadId])
  @@index([linkId])
  @@index([leadId])
  @@index([salesId])
  @@map("lead_tracked_link_clicks")
}

enum AIInsightType {
  WHATSAPP_ANALYSIS
}

model LeadAIInsight {
  id        Int      @id @default(autoincrement())

  leadId    Int
  lead Lead @relation("LeadAIInsightLead", fields: [leadId], references: [id])

  // optional: siapa yang minta analisis (sales yg buka)
  requestedById Int?
  requestedBy   User? @relation("LeadAIInsightRequestedBy", fields: [requestedById], references: [id])

  type      AIInsightType @default(WHATSAPP_ANALYSIS)

  // caching fingerprint: sampai pesan mana yang dianalisis
  lastMessageId Int?
  messageCount  Int @default(0)

  model     String?
  payload   Json

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([leadId, createdAt])
  @@map("lead_ai_insights")
}

enum WhatsAppTemplateScope {
  GLOBAL
  USER
}

model WhatsAppMessageTemplate {
  id        Int      @id @default(autoincrement())

  scope     WhatsAppTemplateScope @default(GLOBAL)

  ownerId   Int?
  owner     User?    @relation(fields: [ownerId], references: [id])

  parentId  Int?
  parent    WhatsAppMessageTemplate? @relation("TemplateParent", fields: [parentId], references: [id])
  children  WhatsAppMessageTemplate[] @relation("TemplateParent")

  code      String?  // optional (misal: "WELCOME_01")
  title     String
  body      String   @db.Text
  mediaUrl  String?
  category  String?
  tags      Json?

  isActive  Boolean  @default(true)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  deletedAt DateTime?

  @@index([scope, isActive])
  @@index([ownerId, isActive])
  @@index([parentId])
  @@unique([ownerId, parentId])
  @@map("whatsapp_message_templates")
}

model LeadSubStatus {
  id        Int        @id @default(autoincrement())

  // label untuk user & marketing
  name      String     // contoh: "No Respon", "Belum Tertarik"
  code      String     @unique // contoh: "NO_RESPONSE", "NOT_INTERESTED"

  // relasi ke status utama
  statusId  Int
  status    LeadStatus @relation(fields: [statusId], references: [id])

  // untuk urutan dropdown
  order     Int        @default(0)

  // bisa dimatikan tanpa hapus data
  isActive  Boolean    @default(true)

  // relasi
  leads Lead[] @relation("LeadSubStatusLeads")
  histories LeadSubStatusHistory[]

  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt

  @@index([statusId])
  @@map("lead_sub_statuses")
}

model LeadSubStatusHistory {
  id          Int           @id @default(autoincrement())

  leadId      Int
  lead        Lead          @relation(fields: [leadId], references: [id])

  subStatusId Int
  subStatus   LeadSubStatus @relation(fields: [subStatusId], references: [id])

  // siapa yang mengubah
  changedById Int?
  changedBy   User? @relation("SubStatusHistoryChangedBy", fields: [changedById], references: [id])

  // owner lead (sales)
  salesId     Int?
  sales       User? @relation("SubStatusHistorySales", fields: [salesId], references: [id])

  note        String?

  createdAt   DateTime      @default(now())

  @@index([leadId])
  @@index([subStatusId])
  @@index([salesId])
  @@map("lead_sub_status_histories")
}

model SalesExcludedContact {
  id        Int      @id @default(autoincrement())

  /// pemilik pengecualian (sales)
  salesId   Int
  sales     User     @relation(fields: [salesId], references: [id])

  /// nomor WhatsApp (WA normalized: 628xxxx)
  phone     String

  /// nama kontak (opsional, hanya untuk UI)
  name      String?

  /// catatan tambahan (opsional)
  /// contoh: "teman kuliah", "keluarga", "internal kantor"
  note      String?

  /// aktif / nonaktif tanpa hapus data
  isActive  Boolean  @default(true)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  /// 1 sales tidak boleh punya nomor pengecualian yang sama
  @@unique([salesId, phone])

  @@index([salesId])
  @@index([phone])

  @@map("sales_excluded_contacts")
}